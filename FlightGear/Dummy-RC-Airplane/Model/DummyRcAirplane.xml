<?xml version="1.0"?>

<PropertyList>
 
<path>DummyRcAirplane.ac</path>
 
<!-- Move propeller disk far away because transparency did not work. To do: make transparent (blend) to indicate propeller speed. -->
 <animation>
	<type>translate</type>
	<object-name>PropellerFast</object-name>
	<property>engines/engine[0]/rpm</property>
	<offset-m>10000</offset-m>
	<axis>
		<x>1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
